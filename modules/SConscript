Import('env')

cppmodules=['algebra',
            'atomic',
            'core',
            'display',
            'domino',
            'em',
            'examples',
            'misc',
            'saxs',
            'search']
pymodules=['modeller']

for p in cppmodules:
    print "Configuring IMP."+p
    env.IMPModule(p)

for p in pymodules:
    print "Configuring IMP."+p
    env.IMPModule(p, cpp=False)

if env.get('localmodules', False):
    import os.path

    dirs= Glob("*/SConscript")

    for m in [os.path.split(str(d))[0] for d in dirs]:
        if m not in cppmodules and m not in pymodules:
            print "Configuring IMP."+m
            env.IMPModule(m)
