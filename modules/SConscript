Import('env')

cppmodules=['algebra',
            'atom',
            'benchmark',
            'core',
            'display',
            'domino',
            'em',
            'examples',
            'helper',
            'misc',
            'saxs',
            'statistics',
            'search']
pymodules=['modeller']

for p in cppmodules:
    env.IMPModuleSetup(p)

for p in pymodules:
    env.IMPModuleSetup(p, cpp=False)

if env.get('localmodules', False):
    import os.path

    dirs= Glob("*/SConscript")

    for m in [os.path.split(str(d))[0] for d in dirs]:
        if m not in cppmodules and m not in pymodules:
            env.IMPModuleSetup(m)
