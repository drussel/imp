Import('env')
import scons_tools.dependency

scons_tools.dependency.boost.add_boost_library(env, "Graph", "graph",
                                               'boost/graph/graphviz.hpp',
                                               body="",
                                               extra_boost_libs=[])


env.IMPModuleBuild(required_modules=['display', 'algebra'],
                   optional_dependencies=['RMF'],
                   required_dependencies=['Boost.Graph'],
                   lib_only_required_modules=['statistics', 'core', 'container'])
