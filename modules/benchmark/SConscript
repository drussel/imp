Import('env')

import scons_tools

scons_tools.dependency.add_external_library(env, "google_perftools_profile",
                                            ["profiler"],
                                            "google/profiler.h",
                                            body=';')


module_env=env.IMPModuleBuild(version='nightly-20/1/2012',
                              lib_only_required_modules=['core', 'algebra'],
                              lib_only_optional_modules=['domino', 'atom', 'em',
                                                         'cgal', 'rmf',
                                                         'multifit'],
                              optional_dependencies=['google_perftools_profile'])
