Import('env')
Export('env')

env.IMPModuleAbout(author='IMP developers', version='SVN',
                   description='General purpose features of broad utility.')

# Link against CGAL if present:
if env['CGAL_LIBS']:
    env.Append(LIBS=env['CGAL_LIBS'])

# No dependent libraries, so this module can always be built:
env.validate()

env.Append(LIBS=['imp_algebra'])

# Subdirectories:
SConscript('src/SConscript')
SConscript('include/SConscript')
SConscript('pyext/SConscript')
SConscript('test/SConscript')
