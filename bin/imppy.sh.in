#!/bin/sh

TOPDIR=@TOPDIR@
MODPY=@MODPY@
PATHSEP=@PATHSEP@
EXTRALIB=@EXTRALIB@

LLP="${EXTRALIB}${TOPDIR}/build/lib"
if test -z "${LD_LIBRARY_PATH}"; then
  LD_LIBRARY_PATH=${LLP}
else
  LD_LIBRARY_PATH=${LLP}${PATHSEP}${LD_LIBRARY_PATH}
fi
if test -z "${DYLD_LIBRARY_PATH}"; then
  DYLD_LIBRARY_PATH=${LLP}
else
  DYLD_LIBRARY_PATH=${LLP}${PATHSEP}${DYLD_LIBRARY_PATH}
fi
if test -z "${LIBPATH}"; then
  LIBPATH=${LLP}
else
  LIBPATH=${LLP}${PATHSEP}${LIBPATH}
fi

PP="${EXTRALIB}${TOPDIR}/build/lib"
if test -z "${PYTHONPATH}"; then
  PYTHONPATH=${PP}
else
  PYTHONPATH=${PP}${PATHSEP}${PYTHONPATH}
fi
export LD_LIBRARY_PATH DYLD_LIBRARY_PATH PYTHONPATH LIBPATH
exec ${MODPY} "$@"
