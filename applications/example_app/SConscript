import os
import os.path

Import('env')
env= env.IMPApplication(name="example_app", version='nightly-30/5/2012',
                        authors=["Daniel Russel"],
                        brief="An example application.",
                        overview="An example application.""",
                        license=env.IMPStandardLicense(),
                        publications=[],
                        required_modules=['atom', 'container'],
                        required_dependencies=['Boost.ProgramOptions'],
                        python=False)
if env:
    fs = Glob("*.cpp")
    for f in fs:
        src= f
        targetname=f.path.replace(".cpp", "")
        prog= env.IMPCPPExecutable(source=[src], target=targetname)
