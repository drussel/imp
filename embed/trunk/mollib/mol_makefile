CC = g++

# SGI STL ported to the GNU compiler.
PLIB = /usr/include/python2.5/
CCFLAGS =  -I$(PLIB)  -ftemplate-depth-50 -Wall -O2 -fPIC -shared
LDFLAGS =  -I$(PLIB) -lpython2.5
#-fpermissive

CLASSES =Vector3 

# Prepare object and source file list using pattern substitution func.
ALL  = $(CLASSES) $(MODULES)
OBJS = $(patsubst %, %.o,  $(ALL))
SRCS = $(patsubst %, %.cc, $(ALL)) 

TARGET = libmol.a

clean_before_compile: clean $(TARGET)


$(TARGET): $(OBJS)
	/usr/bin/ar  src  $(TARGET) $(OBJS) 

.cc.o: $*.cc $*.h
	$(CC)  -c $*.cc $(CCFLAGS)

clean:
	/bin/rm -f $(OBJS) $(TARGET)

depend:
	makedepend -f Makefile.OptLinux -- $(CCFLAGS) -- $(SRCS)
# DO NOT DELETE THIS LINE -- make depend depends on it.

