#!/bin/sh

if test -e .git; then
git checkout develop
git pull
cd tools/git/config
for i in */*
do
rm -f ../../../.git/$i
ln -s ../../tools/git/config/$i ../../../.git/$i
done
cd ../../..
if test `git branch| grep master`; then
echo "Git flow assumed to be set up"
else
git checkout -b master origin/master
git checkout develop
echo "




" | git flow init
fi
else

echo "Script must be run from git root"
fi
