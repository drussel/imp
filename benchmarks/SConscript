import os
import os.path

Import('env')
penv = env.Clone()
penv.Prepend(LIBS=["imp", "imp_misc", "imp_domino", "imp_core", "imp_atom",
                   "imp_algebra"])
if env['build']=='profile' and env['CC'] == 'gcc':
    penv.Prepend(LINKFLAGS=['-static'])

fs = Glob("*.cpp")

all=[]
for f in fs:
    prog= penv.Program(f.rstr())
    all.append(prog)

Return('all')
