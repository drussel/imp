namespace IMP {
inline std::string test_ifile(TextInput a) {
  std::string read;
  while (true) {
    std::string cur;
    a.get_stream() >> cur;
    if (!a) break;
    read= read+cur;
  }
  std::cout << read;
  return read;
}
inline std::string test_ofile(TextOutput a) {
  static_cast<std::ostream &>(a) << "hi\n" 
  << " there, how are things"<< std::endl;
  return "hi\n";
}
}
