%pythoncode %{
class DecoratorIterator:
    def __init__(self, ht):
        self.i=0
        self.ht=ht
    def next(self):
        if self.i == len(self.ht):
            raise StopIteration
        r= self.ht.__getitem__(self.i)
        self.i= self.i+1
        return r
    def __iter__(self):
        return self
%}

